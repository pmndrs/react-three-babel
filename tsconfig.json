{
  "compilerOptions": {
    "baseUrl": "./",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "target": "es2016",
    "module": "esnext",
    "moduleResolution": "node",
    "types": ["node", "jest"],
    "outDir": "dist",
    "declaration": true,
  },
  "include": ["src", "@types"],
}
